{
  "IpRateLimitPolicies": {
    "IpRules": [
      {
        "Ip": "::1", // Yerel IPv6 adresi
        "Rules": [
          {
            "Endpoint": "*", // Tüm endpoint'ler
            "Period": "30s", // 30 saniyede 30 istek
            "Limit": 30
          }
        ]
      }
    ]
  },

  "IpRateLimiting": {
    "EnableEndpointRateLimiting": true,
    "StackBlockedRequests": false,
    "RealIpHeader": "X-Real-IP",
    "ClientIdHeader": "X-ClientId",
    "HttpStatusCode": 429, // Fazla istekler için HTTP 429 döndür
    "IpWhiteList": [ "127.0.0.1", "::1" ], // Beyaz listedeki IP adresleri
    "EndPointWhiteList": [ "put:/api/company" ], // PUT istekleri beyaz listede
    "GeneralRules": [
      {
        "Endpoint": "*", // Tüm endpoint'ler için genel kural
        "Period": "5s", // 5 saniyede 2 istek
        "Limit": 2
      },
      {
        "Endpoint": "*", // Tüm endpoint'ler için genel kural
        "Period": "1m", // 1 dakikada 100 istek
        "Limit": 100
      },
      {
        "Endpoint": "*:/api/Company", // /api/Company endpoint'i için
        "Period": "20s", // 20 saniyede 30 istek
        "Limit": 30
      },
      {
        "Endpoint": "*:/api/Company", // /api/Company endpoint'i için
        "Period": "1m", // 1 dakikada 100 istek
        "Limit": 100
      }
    ]
  },

  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*"
}
